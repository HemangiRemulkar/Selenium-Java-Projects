package seleniumjava;

import java.io.File;
import java.io.IOException;

import org.apache.commons.io.FileUtils;
import org.openqa.selenium.By;
import org.openqa.selenium.OutputType;
import org.openqa.selenium.TakesScreenshot;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

import io.github.bonigarcia.wdm.WebDriverManager;

public class CaptureScreenshots 
{
public static void main(String args[]) throws IOException

{
   WebDriverManager.chromedriver().setup();
   WebDriver driver=new ChromeDriver();
   //Screenshot of full page

   driver.get("www.test.com");
   driver.manage().window().maximize();
   TakesScreenshot ts=(TakesScreenshot)driver;
   File src=ts.getScreenshotAs(OutputType.FILE);
   File trg=new File(".\\Screenshots\\homepage.png");
   FileUtils.copyFile(src,trg);
   System.out.println("Full page Captured");
   
   //Screenshot of section
   WebElement section=driver.findElement(By.xpath("/html/body/div[8]"));
   File src1=section.getScreenshotAs(OutputType.FILE);
   File trg1=new File(".\\Screenshots\\popup.png");
   FileUtils.copyFile(src1,trg1);
   System.out.println("Section Captured");
   
   //Screenshot of element
   WebElement logo=driver.findElement(By.xpath("/html/body/div[4]/header/div[3]/a/img"));
   File src2=logo.getScreenshotAs(OutputType.FILE);
   File trg2=new File(".\\Screenshots\\Logo.png");
   FileUtils.copyFile(src2, trg2);
   System.out.println("Element Captured");
}
}
